{
	"name": "mail-client",
	"version": "1.0.0",
	"description": "My Moleculer-based microservices project",
	"scripts": {
		"dev": "moleculer-runner --repl --hot services/**/*.service.js --envfile development.env",
		"start": "moleculer-runner",
		"cli": "moleculer connect Redis",
		"ci": "jest --watch",
		"test": "jest --coverage",
		"lint": "eslint services",
		"dc:db": "docker-compose up mongo redis",
		"dc:up": "docker-compose up --build -d",
		"dc:logs": "docker-compose logs -f",
		"dc:down": "docker-compose down"
	},
	"keywords": [
		"microservices",
		"moleculer"
	],
	"author": "",
	"devDependencies": {
		"eslint": "^8.25.0",
		"jest": "^27.5.1",
		"jest-cli": "^27.5.1",
		"moleculer-repl": "^0.7.3"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"dotenv": "^16.3.1",
		"hat": "^0.0.3",
		"imapflow": "^1.0.144",
		"ioredis": "^5.0.0",
		"jsonwebtoken": "^9.0.2",
		"mailparser": "^3.6.5",
		"moleculer": "^0.14.26",
		"moleculer-db": "^0.8.20",
		"moleculer-db-adapter-mongo": "^0.4.15",
		"moleculer-db-adapter-mongoose": "^0.9.3",
		"moleculer-web": "^0.10.4",
		"mongoose": "^6.11.2",
		"nodemailer": "^6.9.5",
		"nodemon": "^3.0.1",
		"vash": "^0.13.0"
	},
	"engines": {
		"node": ">= 16.x.x"
	},
	"jest": {
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"rootDir": "./services",
		"roots": [
			"../test"
		]
	}
}
